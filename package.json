{
  "name": "bay-of-plenty",
  "version": "1.2.0",
  "description": "A multi-network, multi-application client for secure scuttlebutt",
  "main": "index.js",
  "scripts": {
    "start": "electron app/index.js",
    "pack": "build --dir",
    "pack:all": "build --dir -mlw",
    "pack:mac": "build --dir -m",
    "pack:linux": "build --dir -l",
    "pack:windows": "build --dir -w",
    "update": "cd app && git reset --hard && git pull && npm install",
    "release": "build",
    "release:all": "build -mlw",
    "release:mac": "build -m",
    "release:linux": "build -l",
    "release:windows": "build -w",
    "publish": "build -mlw --publish=always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "codes.regular.bay-of-plenty",
    "asarUnpack": [
      "node_modules/sodium-native/prebuilds"
    ],
    "npmSkipBuildFromSource": true,
    "npmArgs": [
      "--abi=57"
    ],
    "files": [
      "**/*",
      "!node_modules/**/deps${/*}",
      "!node_modules/**/_node_modules${/*}",
      "!node_modules/sodium-native/prebuilds${/*}",
      "node_modules/sodium-native/prebuilds/${os}-${arch}/electron-57.node",
      "node_modules/sodium-native/prebuilds/${os}-${arch}/libsodium.*",
      "public/**"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": "dmg",
      "publish": [
        "github"
      ],
      "files": [
        "node_modules/sodium-native/prebuilds/darwin-${arch}/electron-57.node",
        "node_modules/sodium-native/prebuilds/darwin-${arch}/libsodium.*"
      ]
    },
    "linux": {
      "target": "tar.gz",
      "category": "Network"
    },
    "win": {
      "icon": "build/icon.ico",
      "publisherName": "regular",
      "files": [
        "node_modules/sodium-native/prebuilds/win32-${arch}/electron-57.node",
        "node_modules/sodium-native/prebuilds/win32-${arch}/libsodium.*"
      ]
    },
    "dmg": {
      "icon": "build/dmg-icon.icns",
      "artifactName": "BayOfPlenty-${version}-mac.${ext}"
    },
    "appImage": {
      "artifactName": "BayOfPlenty-${version}-linux-${arch}.${ext}"
    },
    "nsis": {
      "installerIcon": "build/setup-icon.ico",
      "artifactName": "BayOfPlenty-${version}-windows.${ext}"
    }
  },
  "author": "regular",
  "license": "ISC",
  "devDependencies": {
    "electron": "~2.0.13",
    "electron-builder": "^19.46.9",
    "node-pre-gyp": "^0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regular/bay-of-plenty.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/regular/bay-of-plenty/issues"
  },
  "homepage": "https://github.com/regular/bay-of-plenty#readme"
}
